<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe6fafd"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/top" />

        <ImageButton
            android:id="@+id/pay_back"
            android:layout_width="17dp"
            android:layout_height="27dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back" />


        <ImageButton
            android:id="@+id/pay_xiugai"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/xiugai" />

        <ImageButton
            android:id="@+id/pay_wancheng"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/wancheng"
            android:visibility="gone" />


        <TextView
            android:id="@+id/top_tv"
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="确认订单"
            android:textColor="#fff"
            android:textSize="19dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff">


                <ImageButton
                    android:id="@+id/weo_btn"
                    android:layout_width="24dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/weo" />


                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/weo_btn"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/weo_btn"
                    android:layout_toRightOf="@+id/weo_btn"
                    android:text="收 货 人 ："
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/receiver_name"
                    android:layout_width="147.5dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/textView13"
                    android:layout_toRightOf="@id/textView13"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="bottom"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="小明"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/textView13"
                    android:layout_below="@id/textView13"
                    android:layout_marginTop="12dp"
                    android:text="联系电话："
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/receiver_phone"
                    android:layout_width="147.5dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/textView14"
                    android:layout_toRightOf="@id/textView14"
                    android:background="@null"
                    android:gravity="bottom"
                    android:focusable="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="10086"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/textView14"
                    android:layout_below="@id/textView14"
                    android:layout_marginTop="12dp"
                    android:text="收货地址："
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/receiver_address"
                    android:layout_width="147.5dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/textView15"
                    android:layout_toRightOf="@id/textView15"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="bottom"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:text="西安市 雁塔区"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/textView15"
                    android:layout_below="@id/textView15"
                    android:layout_marginTop="12dp"
                    android:text="提货方式："
                    android:textColor="#000000" />


                <RadioGroup
                    android:id="@+id/receiver_way"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/textView16"
                    android:layout_toRightOf="@id/textView16"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <RadioButton
                        android:id="@+id/receiver_way_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="司机配送"/>

                    <RadioButton
                        android:id="@+id/receiver_way_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自提"
                        android:visibility="gone"/>


                </RadioGroup>

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/textView13"
                    android:layout_below="@id/textView16"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="12dp"
                    android:text="备      注："
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/receicer_note"
                    android:layout_width="147.5dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/textView17"
                    android:layout_toRightOf="@id/textView17"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="bottom"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    android:text="请于早上10点前送达"
                    android:singleLine="true"
                    android:textSize="15sp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/fangzi"
                android:layout_width="33.5dp"
                android:layout_height="30dp"
                android:layout_below="@id/details"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/fangzi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/fangzi"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/fangzi"
                android:text="订单列表"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ListView
                android:id="@+id/order_details"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/fangzi"
                android:layout_marginTop="5dp">

            </ListView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/kuang_car"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/all_money"
                android:layout_toStartOf="@+id/all_money"
                android:text="合计: "
                android:textColor="#fff" />

            <TextView
                android:id="@+id/all_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:layout_toLeftOf="@+id/order_confirm"
                android:layout_toStartOf="@+id/order_confirm"
                android:text="100"
                android:textSize="18sp"
                android:textColor="#ff00" />

            <ImageButton
                android:id="@+id/order_confirm"
                android:layout_width="63.5dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/pay_sure" />

        </RelativeLayout>

    </FrameLayout>


</LinearLayout>
